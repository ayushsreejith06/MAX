{
  "$schema": "https://schema.tauri.app/config/1",
  "package": {
    "productName": "MAX Desktop",
    "version": "1.0.0"
  },
  "build": {
    "distDir": "../frontend/out",
    "devPath": "http://localhost:3000",
    "beforeDevCommand": "",
    "beforeBuildCommand": "node ../scripts/build-frontend-desktop.js"
  },
  "tauri": {
    "allowlist": {
      "all": false
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.max.desktop",
      "resources": [
        "../backend/**/*"
      ],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "MAX Desktop",
        "width": 1440,
        "height": 900,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "updater": {
      "active": false
    }
  }
}
